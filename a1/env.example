# =============================================================================
# A1 AWS Braket Configuration
# =============================================================================
# Copy this file to .env and fill in your credentials
# 
# Usage:
#   cp env.example .env
#   # Edit .env with your actual values
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Credentials
# -----------------------------------------------------------------------------
# Option 1: Direct credentials (not recommended for production)
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here

# Option 2: Use AWS profile (recommended)
# If set, this will be used instead of direct credentials
AWS_PROFILE=default

# -----------------------------------------------------------------------------
# AWS Region
# -----------------------------------------------------------------------------
# Braket is available in: us-east-1, us-west-1, us-west-2, eu-west-2
AWS_DEFAULT_REGION=us-east-1

# -----------------------------------------------------------------------------
# S3 Bucket for Braket Results
# -----------------------------------------------------------------------------
# Braket stores task results in S3
# Format: amazon-braket-{your-bucket-name}
# The bucket must exist and be in the same region as your Braket tasks
BRAKET_S3_BUCKET=amazon-braket-your-bucket-name
BRAKET_S3_PREFIX=a1-experiments

# -----------------------------------------------------------------------------
# Braket Device ARNs
# -----------------------------------------------------------------------------
# Simulators (always available, low cost)
BRAKET_SIMULATOR_SV1=arn:aws:braket:::device/quantum-simulator/amazon/sv1
BRAKET_SIMULATOR_TN1=arn:aws:braket:::device/quantum-simulator/amazon/tn1
BRAKET_SIMULATOR_DM1=arn:aws:braket:::device/quantum-simulator/amazon/dm1

# IonQ (ion trap quantum computer)
BRAKET_DEVICE_IONQ=arn:aws:braket:us-east-1::device/qpu/ionq/Harmony

# Rigetti (superconducting quantum computer)
BRAKET_DEVICE_RIGETTI=arn:aws:braket:us-west-1::device/qpu/rigetti/Aspen-M-3

# IQM (superconducting, EU region)
BRAKET_DEVICE_IQM=arn:aws:braket:eu-north-1::device/qpu/iqm/Garnet

# -----------------------------------------------------------------------------
# Experiment Settings
# -----------------------------------------------------------------------------
# Default number of shots for experiments
DEFAULT_SHOTS_SIMULATOR=1000
DEFAULT_SHOTS_QPU=100

# Number of trials for statistical analysis
NUM_TRIALS=5

# Maximum wait time for task completion (seconds)
TASK_TIMEOUT=3600

# -----------------------------------------------------------------------------
# Cost Control
# -----------------------------------------------------------------------------
# Set to 'true' to enable real QPU execution (costs money!)
# Set to 'false' to use simulators only
ENABLE_QPU_EXECUTION=false

# Maximum cost per experiment (USD) - safety limit
MAX_COST_PER_EXPERIMENT=10.00

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=a1_braket.log

